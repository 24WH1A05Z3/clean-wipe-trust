{
  "name": "wipeguardian-suite",
  "version": "1.0.0",
  "description": "Secure cross-platform data wiping application with NIST SP 800-88 compliance",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "lint": "eslint src/"
  },
  "keywords": [
    "data-wipe",
    "secure-erase",
    "NIST-compliance",
    "e-waste",
    "data-sanitization",
    "electron"
  ],
  "author": "WipeGuardian Team",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.3.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@electron/remote": "^2.0.12",
    "axios": "^1.5.1",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.2",
    "chart.js": "^4.4.0",
    "crypto-js": "^4.2.0",
    "drivelist": "^11.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "node-disk-info": "^1.3.0",
    "node-forge": "^1.3.1",
    "pdfkit": "^0.14.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "sqlite3": "^5.1.6",
    "systeminformation": "^5.21.11",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "build": {
    "appId": "com.wipeguardian.suite",
    "productName": "WipeGuardian Suite",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/icons/icon.png",
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}